layout {
    default_tab_template focus=true hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        pane close_on_exit=true {
            command "zsh"
            args "-i"
        }
        pane size=1 borderless=true {
            plugin location="status-bar"
        }
    }
    tab
}
